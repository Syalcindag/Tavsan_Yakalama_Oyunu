<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"

    tools:context="com.sefayalcindag.firstgame.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="420dp"
        android:text="TÄ°ME : 30"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewPuan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="422dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.328">

        <ImageButton
            android:id="@+id/sirin"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_column="0"
            android:layout_row="1"
            app:srcCompat="@drawable/tavsan2" />

        <ImageButton
            android:id="@+id/sirin2"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_column="0"
            android:layout_row="0"
            android:onClick="scoreText"
            app:srcCompat="@drawable/tavsan2" />

        <ImageButton
            android:id="@+id/sirin3"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_column="1"
            android:layout_row="0"
            android:onClick="scoreText"

            app:srcCompat="@drawable/tavsan2" />

        <ImageButton
            android:id="@+id/sirin4"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_column="2"
            android:layout_row="0"
            android:onClick="scoreText"

            app:srcCompat="@drawable/tavsan2" />

        <ImageButton
            android:id="@+id/sirin5"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="scoreText"

            app:srcCompat="@drawable/tavsan2" />

        <ImageButton
            android:id="@+id/sirin6"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="scoreText"

            app:srcCompat="@drawable/tavsan2" />

        <ImageButton
            android:id="@+id/sirin7"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="scoreText"

            app:srcCompat="@drawable/tavsan2" />

        <ImageButton
            android:id="@+id/sirin8"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="scoreText"

            app:srcCompat="@drawable/tavsan2" />

        <ImageButton
            android:id="@+id/sirin9"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="scoreText"

            app:srcCompat="@drawable/tavsan2" />

    </GridLayout>

    <TextView
        android:id="@+id/textViewPuan"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginTop="432dp"
        android:text="PUAN : 0"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTime" />
</android.support.constraint.ConstraintLayout>
